<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.FoodDiary.FoodDiaryActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/baseline_keyboard_arrow_left_24"
                    android:contentDescription="Back"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView_date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/darkGreen"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/button_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:contentDescription="Forward"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@color/green"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_diary_caloriesConsumed"
                            android:text="Calories Consumed"
                            android:textAlignment="center"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/yellowGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Calories Consumed"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/yellowGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_diary_calorieGoals"
                            android:text="Goal"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:layout_weight="0.25"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="-"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/textView_diary_totalFoodCal"
                            android:text="Food"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="="
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/textView_diary_caloriesLeft"
                            android:text="Remain"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:layout_weight="0.25"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:text="Goal"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_weight="0.33"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView

                            android:text="Food"
                            android:textAlignment="center"
                            android:layout_weight="0.5"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView

                            android:text="Remain"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_weight="0.25"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:padding="15dp"
                        android:text="Breakfast"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_diary_breakfast"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <Button
                            android:id="@+id/button_diary_breakfast"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:text="Add Food +"
                            android:elevation="5dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F3F3F3"
                app:cardElevation="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:padding="15dp"
                        android:text="Lunch"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_diary_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <Button
                            android:id="@+id/button_diary_lunch"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:text="Add Food +"
                            android:elevation="5dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:padding="15dp"
                        android:text="Dinner"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_diary_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <Button
                            android:id="@+id/button_diary_dinner"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:text="Add Food +"
                            android:elevation="5dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonHome_foodDiary"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/green_home_24"
                    android:elevation="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage"
                    tools:layout_editor_absoluteY="648dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="Home"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

</ScrollView>