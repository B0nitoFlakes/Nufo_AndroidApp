<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/random_list_container_detectFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_selectToLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/textView_detectName"
                android:text="Food Detected"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:textColor="@color/darkGreen"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_detectedFood"
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Calories : "
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView_detectCal"
                    android:text="Hello"
                    android:layout_weight="1"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Carbohydrates : "
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView_detectCarb"
                    android:text="Hello"
                    android:layout_weight="1"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Protein : "
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView_detectProtein"
                    android:text="Hello"
                    android:layout_weight="1"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Fats : "
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView_detectFat"
                    android:text="Hello"
                    android:layout_weight="1"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>