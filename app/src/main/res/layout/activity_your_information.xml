<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:theme="@style/Theme.Nufo"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileAndAccount.YourInformationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Information"
                android:textColor="@color/darkGreen"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:layout_editor_absoluteX="-16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Name"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/nameEditText"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/green_border"
                            android:padding="10dp"
                            android:textColor="@color/darkGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ageTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Age"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/ageEditText"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/green_border"
                            android:padding="10dp"
                            android:textColor="@color/darkGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/genderTextView"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/genderSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:textColor="@color/darkGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weightGoalTextView"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Goal"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Spinner
                            android:id="@+id/weightGoalSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:entries="@array/weight_goals"
                            android:textColor="@color/darkGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weightTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Weight"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/weightEditText"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/green_border"
                            android:padding="10sp"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/kgTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="0.2"
                            android:text="kg"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/heightTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Height"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/heightEditText"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/green_border"
                            android:padding="10sp"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/cmTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.2"
                            android:text="cm"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activityLevelsTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Activity Levels :"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroupActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/r1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Little To No Exercise"
                            android:paddingStart="5dp"
                            android:button="@drawable/custom_radiobutton"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <RadioButton
                            android:id="@+id/r2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lightly active (exercise 1-3 days per week)"
                            android:paddingStart="5dp"
                            android:button="@drawable/custom_radiobutton"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <RadioButton
                            android:id="@+id/r3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moderately active (exercise 3-5 days per week)"
                            android:paddingStart="5dp"
                            android:button="@drawable/custom_radiobutton"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <RadioButton
                            android:id="@+id/r4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very active (exercise 6-7 days per week)"
                            android:paddingStart="5dp"
                            android:button="@drawable/custom_radiobutton"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <RadioButton
                            android:id="@+id/r5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Extra active (very hard exercise or physical job)"
                            android:paddingStart="5dp"
                            android:button="@drawable/custom_radiobutton"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/darkGreen"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/donePersonalInfoButton"
                android:layout_width="180dp"
                android:layout_marginTop="20dp"
                android:layout_height="71dp"
                android:background="@drawable/button_background"
                android:elevation="10dp"
                android:text="Done"
                android:layout_gravity="center"
                android:textColor="@color/darkGreen"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                tools:ignore="HardcodedText,SpUsage" />


    </LinearLayout>


</ScrollView>
